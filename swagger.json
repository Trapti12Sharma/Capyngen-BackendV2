{
  "openapi": "3.0.3",
  "info": {
    "title": "Capyngen Backend API",
    "description": "API documentation for Capyngen backend (Contact, Blogs, Careers)",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:4000",
      "description": "Local server"
    },
    
    {
      "url": "https://capyngen-backendv2-1.onrender.com",
      "description": "Render deployed server"
    }
  ],
  "paths": {
   "/api/contact": {
  "post": {
    "summary": "Submit contact form",
    "tags": ["Contact"],
    "requestBody": {
      "description": "Contact form details",
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "firstName": { "type": "string", "example": "John" },
              "lastName": { "type": "string", "example": "Doe" },
              "email": { "type": "string", "example": "john.doe@example.com" },
              "phoneNumber": { "type": "string", "example": "+1 (555) 555-5555" },
              "subject": { "type": "string", "example": "Inquiry" },
              "message": {
                "type": "string",
                "example": "Hi, I want to know more about your services."
              }
            },
            "required": ["firstName", "lastName", "email", "message"]
          }
        }
      }
    },
    "responses": {
      "200": { "description": "Email sent successfully" },
      "400": { "description": "Validation error" },
      "500": { "description": "Failed to send email" }
    }
  }
}
,
    "/api/blogs": {
      "post": {
        "summary": "Create a new blog post",
        "tags": ["Blogs"],
        "requestBody": {
          "description": "Blog post data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string", "example": "My First Blog" },
                  "author": { "type": "string", "example": "Admin" },
                  "description": { "type": "string", "example": "A short description of the blog" },
                  "content": { "type": "string", "example": "This is the full blog content." },
                  "image": { "type": "string", "example": "https://example.com/blog.jpg" },
                  "tags": {
                    "type": "array",
                    "items": { "type": "string" },
                    "example": ["React", "Node.js", "MongoDB"]
                  }
                },
                "required": ["title", "author", "description", "content"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Blog saved successfully" },
          "400": { "description": "Validation error" },
          "500": { "description": "Failed to save blog" }
        }
      },
      "get": {
        "summary": "Get all blog posts",
        "tags": ["Blogs"],
        "responses": {
          "200": { "description": "List of blogs" },
          "500": { "description": "Failed to fetch blogs" }
        }
      }
    },
    "/api/blogs/{id}": {
      "put": {
        "summary": "Update a blog post",
        "tags": ["Blogs"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Blog ID"
          }
        ],
        "requestBody": {
          "description": "Fields to update in the blog",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string", "example": "Updated Blog Title" },
                  "author": { "type": "string", "example": "Admin" },
                  "description": { "type": "string", "example": "Updated description" },
                  "content": { "type": "string", "example": "Updated full content" },
                  "image": { "type": "string", "example": "https://example.com/new-image.jpg" },
                  "tags": {
                    "type": "array",
                    "items": { "type": "string" },
                    "example": ["Updated", "React"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Blog updated successfully" },
          "404": { "description": "Blog not found" },
          "500": { "description": "Failed to update blog" }
        }
      },
      "delete": {
        "summary": "Delete a blog post",
        "tags": ["Blogs"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Blog ID"
          }
        ],
        "responses": {
          "200": { "description": "Blog deleted successfully" },
          "404": { "description": "Blog not found" },
          "500": { "description": "Failed to delete blog" }
        }
      }
    },
    "/api/careers": {
      "post": {
        "summary": "Create a new career opening",
        "tags": ["Careers"],
        "requestBody": {
          "description": "Career opening details",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string", "example": "Frontend Developer" },
                  "department": { "type": "string", "example": "Engineering" },
                  "location": { "type": "string", "example": "Remote" },
                  "jobType": { "type": "string", "example": "Full-time" },
                  "description": { "type": "string", "example": "Develop modern web applications" },
                  "requirements": { "type": "string", "example": "2+ years experience in React.js" },
                  "applyLink": { "type": "string", "example": "https://apply.example.com" }
                },
                "required": ["title", "department", "location", "jobType", "description"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Career created successfully" },
          "400": { "description": "Validation error" },
          "500": { "description": "Failed to create career" }
        }
      },
      "get": {
        "summary": "Get all career openings",
        "tags": ["Careers"],
        "responses": {
          "200": { "description": "List of careers" },
          "500": { "description": "Failed to fetch careers" }
        }
      }
    },
    "/api/careers/{id}": {
      "put": {
        "summary": "Update a career opening",
        "tags": ["Careers"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Career ID"
          }
        ],
        "requestBody": {
          "description": "Fields to update in the career opening",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string", "example": "Updated Job Title" },
                  "department": { "type": "string", "example": "Updated Department" },
                  "location": { "type": "string", "example": "Updated Location" },
                  "jobType": { "type": "string", "example": "Contract" },
                  "description": { "type": "string", "example": "Updated job description" },
                  "requirements": { "type": "string", "example": "Updated requirements" },
                  "applyLink": { "type": "string", "example": "https://apply.example.com/new" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Career updated successfully" },
          "404": { "description": "Career not found" },
          "500": { "description": "Failed to update career" }
        }
      },
      "delete": {
        "summary": "Delete a career opening",
        "tags": ["Careers"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Career ID"
          }
        ],
        "responses": {
          "200": { "description": "Career deleted successfully" },
          "404": { "description": "Career not found" },
          "500": { "description": "Failed to delete career" }
        }
      }
    }
  },
  "tags": [
    { "name": "Contact", "description": "Contact form API" },
    { "name": "Blogs", "description": "Blog posting and retrieval API" },
    { "name": "Careers", "description": "Career openings management (create, list, update, delete)" }
  ]
}
